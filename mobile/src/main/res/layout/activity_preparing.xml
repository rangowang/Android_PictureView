<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

             android:id="@+id/my_frame"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:foregroundGravity="center">

    <RelativeLayout
        android:id="@+id/my_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#000333">

        <View
            android:id="@+id/view"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:background="#000000" />
        <ImageView
            android:id="@+id/img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/view"
            android:layout_centerVertical="true"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_4"/>
        <ImageView
            android:id="@+id/img_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/view"
            android:layout_above="@id/img4"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_4"/>
        <ImageView
            android:id="@+id/img_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/view"
            android:layout_below="@id/img4"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_4"/>
        <ImageView
            android:id="@+id/img6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/view"
            android:layout_centerVertical="true"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_6"/>
        <ImageView
            android:id="@+id/img_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/view"
            android:layout_above="@id/img6"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_6"/>
        <ImageView
            android:id="@+id/img_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/view"
            android:layout_below="@id/img6"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_6"/>
        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/view"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_2"/>
        <ImageView
            android:id="@+id/img_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/view"
            android:layout_toStartOf="@id/img2"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_2"/>
        <ImageView
            android:id="@+id/img_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/view"
            android:layout_toStartOf="@id/img_a"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_2"/>
        <ImageView
            android:id="@+id/img_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/view"
            android:layout_toEndOf="@id/img2"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_2"/>
        <ImageView
            android:id="@+id/img_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/view"
            android:layout_toEndOf="@id/img_h"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_2"/>
        <ImageView
            android:id="@+id/img8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_8"/>
        <ImageView
            android:id="@+id/img_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_toStartOf="@id/img8"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_8"/>
        <ImageView
            android:id="@+id/img_j"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_toStartOf="@id/img_i"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_8"/>
        <ImageView
            android:id="@+id/img_k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_toEndOf="@id/img8"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_8"/>
        <ImageView
            android:id="@+id/img_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_toEndOf="@id/img_k"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_8"/>
        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/img_b"
            android:layout_above="@id/img_d"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_1"/>
        <ImageView
            android:id="@+id/img7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/img_j"
            android:layout_below="@id/img_e"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_7"/>
        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_c"
            android:layout_above="@id/img_f"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_3"/>
        <ImageView
            android:id="@+id/img9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_l"
            android:layout_below="@id/img_g"
            android:contentDescription="@string/frame_line"
            android:src="@drawable/b_9"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:text="@string/preparing"
        android:gravity="center|bottom"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        />
</FrameLayout>

