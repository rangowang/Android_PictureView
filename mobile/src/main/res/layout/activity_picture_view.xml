<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/activity_pic_show"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".PictureView"
             android:background="#000000">
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:contentDescription="@string/pic"
        android:scaleType="matrix"/>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#70000333"
            >
            <ImageView
                android:id="@+id/btnPlay"
                android:scaleType="centerInside"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_play"/>
            <ImageView
                android:id="@+id/btnList"
                android:scaleType="centerInside"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_list"/>


            <ImageView
                android:id="@+id/btnSet"
                android:scaleType="centerInside"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_setwallpaper"/>
            <ImageView
                android:id="@+id/btnRotateR"
                android:scaleType="centerInside"
                android:layout_width="71dp"
                android:layout_height="60dp"
                android:layout_toLeftOf="@id/btnSet"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_rightrotate"/>
            <ImageView
                android:id="@+id/btnRotateL"
                android:layout_width="71dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btnRotateR"
                android:background="@drawable/btn_leftrotate"/>


        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
